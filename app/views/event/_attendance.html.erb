<% @status_strings ||= { :yes => _('attending'), :no => _('not attending'), :maybe => _('uncommitted') } -%>
<% status = attendance_status(event, User.current_user) %>
<td class="<%= status %>">
  <p><%= _("You are currently %s." % content_tag(:span, h(@status_strings[status]), :class => status)) %></p>
	<%= select_tag(nil, options_for_select(@status_strings.invert, status), :class => :commit, :name => :status) %><br />
	<%= submit_tag(h(_("Change status"))) %>
</td>
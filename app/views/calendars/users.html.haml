%table.users
  %tr
    %th&= _('Name')
    %th&= _('E-mail')
    %th&= _('Address')
    %th&= _('Role for this calendar')
  - for user in @users do
    %tr[user]
      %td&= [user.lastname, user.firstname].compact.join(', ')
      %td&= user.show_contact ? user.email : ''
      %td= user.show_contact ? [user.street, user.street2, "#{user.city}, #{user.state.code} #{user.zip}, #{user.state.country.code}"].compact.collect {|s| h(s)}.join(tag(:br)) : ''
      %td
        - perm = user.permissions.find_by_calendar_id(@current_object)
        - if user == User.current_user
          &= perm.role
        - else
          - form_for perm do |f|
            = f.collection_select :role_id, Role.find(:all, :order => :name), :id, :to_s, {}, {:id => "permission_#{perm.id}_role_id"}
            = submit_tag(h(_('Save')))
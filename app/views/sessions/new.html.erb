<% form_tag session_path do -%>
<p><label for="email"><%= h _("E-mail address") %></label><br/>
<%= text_field_tag 'email' %></p>

<p><label for="password"><%= h _("Password") %></label><br/>
<%= password_field_tag 'password' %></p>


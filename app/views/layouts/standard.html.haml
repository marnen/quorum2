!!! XML
!!!
%html{:xmlns => "http://www.w3.org/1999/xhtml"}
  %head
    %meta{:'http-equiv' => "content-type", :content => "text/html;charset=utf-8"}
    %title= h(SITE_TITLE) + ' | ' + h(@page_title)
    = stylesheet_link_tag "quorum"
    = yield :head
    = yield :javascript
    = @extra_headers

  %body
    %p
      = content_tag(:span, h(SITE_TITLE), :class => :siteName) + ' | '
      = link_to(h(_("List events")), url_for(:controller => :events, :action => :index)) + ' | '
      = link_to(h(_("Add event")), url_for(:controller => :events, :action => :new)) + ' | '
      = link_to(h(_("User profile")), profile_path) + ' | '
      - if User.current_user.role.name == 'admin'
        = link_to(h(_("Contact list")), list_users_path) + ' | '
      = link_to(h(_("Log out")), url_for(:controller => :logout))
      -# Is there a better way to generate that logout URL?
    %p= h(_("Welcome, %s!")) % content_tag(:span, h(current_user.fullname), :class => :name)
    - if !flash[:notice].nil?
      .flash_notice= flash[:notice]
    - if !flash[:warning].nil?
      .flash_warning= flash[:warning]
    - if !flash[:error].nil?
      .flash_error= flash[:error]
    %h1&= @page_title
    = yield
    
    %p.footer
      %a{:href => "http://validator.w3.org/check?uri=referer"}
        %img{:src => "http://www.w3.org/Icons/valid-xhtml10", :alt => "Valid XHTML 1.0 Transitional", :height => "31", :width => "88"}